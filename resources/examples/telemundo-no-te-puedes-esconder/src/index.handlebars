                        </li>
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                    </div>
                    <div id="hours" class="time-group">
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                    </div>
                    <div id="minutes" class="time-group">
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                    </div>
                    <div id="seconds" class="time-group">
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                        <li class="time-card">
                            <div class="top" data-count="0"></div>
                            <div class="bottom" data-count="0"></div>
                        </li>
                    </div>
                </div>
            </div>

        </div>
